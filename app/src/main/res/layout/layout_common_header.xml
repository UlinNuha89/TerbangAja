<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple5"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_back_header"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/neutral1" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="@color/neutral1"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_back_header"
        app:layout_constraintStart_toEndOf="@id/iv_back_header"
        app:layout_constraintTop_toTopOf="@id/iv_back_header"
        tools:text="this is title" />

</androidx.constraintlayout.widget.ConstraintLayout>
